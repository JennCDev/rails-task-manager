<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<div>
<% if @task.completed%>
<i class="fa-regular fa-square-check"></i>
<% else %>
<i class="fa-regular fa-square"></i>
<% end %>
<p><%= @message_completed %></p>
</div>

<%=link_to "Edit", edit_task_path(@task), class:"text-decoration-none" %>

<%=link_to "Back to list", tasks_path, class:"text-decoration-none" %>
